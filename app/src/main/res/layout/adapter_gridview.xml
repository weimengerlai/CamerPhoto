<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fb_background">

    <ImageView
        android:id="@+id/iv_adapter_imagelist_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/load_img" />

    <ImageView
        android:id="@+id/iv_adapter_imagelist_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/patient_icon_unselect" />

    <ImageView
        android:id="@+id/iv_adapter_imagelist_select_big"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="0dp"
         />
</RelativeLayout>
